{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container">
    <a class="btn btn-primary btn-4 btn-4c icon-arrow-right mb-4 mt-5" href="{{ path('category_index') }}">retourner aux catégories</a>
    <table class="table mb-5">
        <tbody>
            <tr>
                <th>Intitulé de la catégorie</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ category.imageName }}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td><a class="btn btn-secondary btn-4 btn-4c icon-arrow-right" href="{{ path('category_edit', {'id': category.id}) }}">Mettre à jour</a></td>
                <td>{{ include('category/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>

    
</div>

{% endblock %}


