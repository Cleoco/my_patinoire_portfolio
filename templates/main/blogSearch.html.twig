{% extends 'base.html.twig' %}
{% block title %}Portfolio{% endblock %}

{% block body %}
<style>
  .article_image{
    width:100%;
    height: 200px;
    overflow: hidden;
  }
  .article_image img{
    width:100%;
    object-fit: cover;
  }
.btn-more {
  font-size : 10px !important;
  padding : 10px 20px !important

}
.sidebar{
  background:var(--color-grey);
  width:100%
}    
.search_input input:first-child{
  width:100%;
  height:40px;
  border-radius:30px;
  border:0;
  background:white;
  padding-left:20px;
}
.search_input{
  position:relative;
}
.background_icon_search{
  width:40px;
  height:30px;
  background:white;
  position:absolute;
  top:5px;
  right:20px;
}

.social_network{
  margin-top:150px;
}
.social_network_icons .fa{
  font-size:25px;
  color:var(--color-violet) !important;
}
.search{
    background:white !important;
}
.h3_title{
  text-align:left;
}


</style>

<div class="container">
  <section class="article ">
          <div class="row">
                  <div class="container row cards">
                  {% set index = 0 %}
                    <a class="card col-lg-2 col-md-3" href="{{path('blog')}}">
                              <div>
                                  <img src='{{ asset('images/tout.svg') }}' alt="">
                                  <h3>TOUT</h3>
                                  <div class="filet-fin"></div>
                              </div>
                              </a>
                      {% for f in filters %}
                          <!-- filtres -->
                              <a class="card col-lg-2 col-md-3" href="{{path('blog_filters',{'id': f.id})}}">
                              <div  data-index={{ index }}>
                                  <img src='{{ asset('images/' ~ f.image ~ '') }}' alt="">
                                  <h3>{{ f.name }}</h3>
                                  <div class="filet-fin"></div>
                              </div>
                              {% set index = index + 1 %}
                              </a>
                      {% endfor %}
                  </div>
              </div>
          </div>
      </section>

  <section class="article_body container">

  <h2>{{ filterName }}</h2>
  <div class="filet"></div>
    <div class="row">

        <div class="listing_articles col-lg-8 col-md-8 col-sm-12">
          {% for s in search %}
            <div class="article_content ">
              <div class="row">
                  <div class="article_image col-lg-4">
                      <img src='{{ asset('images/blog/' ~ s.imageName ~ '') }}' alt="">
                  </div>
                  <div class="article_info col-lg-8">
                      <a href="{{ path('article_show', {'id': s.id}) }}" >
                          <h3 class="article_title">{{ s.title }}</h3>
                      </a>
                          <p>{{ s.createdAt | date('d-m-Y') }}</p>
                          <p>{{ s.content | slice(0, 100) |raw }} …</p>
                        <a href="{{ path('article_show', {'id': s.id}) }}">
                          <div class="btn btn-primary btn-more">Lire la suite</div>
                        </a>
                  </div>
              </div>
            <hr>
            </div>
            {% endfor %}
          <div class="pagination">
            {{ knp_pagination_render(search) }}
          </div>
        </div>


        <div class="sidebar col-lg-4 col-md-4 col-sm-12 p-4">
          <div class="search_tool">
            <h3 class="mt-3 h3_title" >Rechercher</h3>
            <form action="" method="post">
              <div class="search_input mt-3">
                <input type="text" class="form-control search" placeholder="mots-clés…" name="search">
                <div type="submit" name="" id="" ><div class="background_icon_search d-flex justify-content-center align-items-center mt-1" ><i class="fa fa-search" aria-hidden="true"></i></div></div>
              </div>
            </form>
          </div>
          <div class="social_network">
            <h3 class="h3_title">Follow me !</h3>
            <div class="social_network_icons d-flex justify-content-around mt-5">
                <a href="https://www.facebook.com/cleo.csn"target="_blank"><i class="fa fa-facebook"></i></a>
                <a href="https://www.instagram.com/cleo__cook/?hl=fr"target="_blank"><i class="fa fa-instagram"></i></a>
                <a href="https://www.linkedin.com/in/cl%C3%A9o-cosnier-092b7668"target="_blank"><i class="fa fa-linkedin"></i></a>
                <a href="https://www.pinterest.fr/cleocosnier/"><i class="fa fa-pinterest-p"target="_blank"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>
        
{% endblock %}
