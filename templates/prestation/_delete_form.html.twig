<form method="post" action="{{ path('prestation_delete', {'id': prestation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prestation.id) }}">
    <button class="btn btn-danger btn-4 btn-4c icon-arrow-right">Supprimer la prestation</button>
</form>
